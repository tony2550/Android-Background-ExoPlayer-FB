<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >


    <com.com.clone_spotify.MediaSeekBar
        android:id="@+id/seekbar_audio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/black_border_top" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/media_controller"
        android:background="@color/nav_color"
        android:paddingTop="1dp">


        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:srcCompat="@drawable/billiecover1"
            android:id="@+id/media_song_image"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@id/media_song_image"
            android:layout_toLeftOf="@id/play_pause"
            android:text="PlayList1"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:id="@+id/media_song_title"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/media_song_image"
            android:layout_toLeftOf="@id/play_pause"
            android:layout_below="@id/media_song_title"
            android:text="플레이리스트 . 무키"
            android:textSize="13dp"
            android:textColor="@color/white"
            android:id="@+id/media_song_artist"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_play_arrow_24dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:padding="7dp"
            android:layout_centerVertical="true"
            android:background="@color/nav_color"
            android:id="@+id/play_pause"/>

    </RelativeLayout>


</LinearLayout>